<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/background1">

    <ImageButton
        android:id="@+id/imgbt_mic"
        android:layout_width="100dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_mic"
        android:layout_weight="1"
        android:layout_height="50dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center"

        >

        <ImageButton
            android:id="@+id/imgbt_bird"
            android:layout_width="150dp"
            android:layout_margin="8dp"
            android:background="@drawable/bird"
            android:layout_height="150dp"

            >
        </ImageButton>

        <ImageButton
            android:id="@+id/imgbt_bird2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:background="@drawable/bird2"
            >
        </ImageButton>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:layout_weight="1"


        >

        <ImageButton
            android:id="@+id/imgbt_bird3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/bird3"
            android:layout_margin="8dp"

            >

        </ImageButton>

        <ImageButton
            android:id="@+id/imgbt_bird4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:background="@drawable/bird4"

            >

        </ImageButton>

    </LinearLayout>
</LinearLayout>